vi ~/.profile(just one user) or sudo vi /etc/profile.d/hook.sh (for all users).

#work kits hook shell
DAIQ_WORK_HOME=/work
DAIQ_JDK_VER=1.7*
if [ -d "${DAIQ_WORK_HOME}/kits/linux/setup" ] ; then
    . ${DAIQ_WORK_HOME}/kits/linux/setup/profile_hook.sh
fi

source ~/.profile


FOR ALL BASH USER
sudo cp ./profile_hook.sh /etc/profile.d/profile_hook.sh
#sudo reboot

#sudo cp ./startup_hook.sh /etc/rc5.d/S10startup_hook.sh
#sudo reboot
sudo vim /etc/rc.local
#add
DAIQ_WORK_HOME=/work
if [ -x "${DAIQ_WORK_HOME}/kits/linux/setup/startup.sh" ] ; then
    . ${DAIQ_WORK_HOME}/kits/linux/setup/startup.sh
fi

running queue: startup.sh -> profile.sh
